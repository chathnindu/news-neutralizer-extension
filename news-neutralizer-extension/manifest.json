{
  "manifest_version": 3,
  "name": "News Neutralizer",
  "version": "1.0",
  "description": "See how multiple sources cover the same story â€” neutral summary, bias detection, comparison",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://newsapi.org/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/content.js"]
  }]
}
